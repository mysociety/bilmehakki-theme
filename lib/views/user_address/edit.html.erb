<% @title = _('Change your address on {{site_name}}',
   :site_name => site_name) %>

<div id="change_address">
  <%= form_for(@user, :url => user_update_address_path) do |f| %>
    <%= foi_error_messages_for :user %>

    <div class="form_note">
      <h1><%= @title %></h1>
    </div>

    <p>
      <%= f.label :address, _('Address:'),
                  :class => 'form_label' %>
      <%= f.text_area :address, :value => @user.address %>
    </p>

    <div class="form_button">
      <%= f.submit _('Change address') %>
    </div>
  <% end %>
</div>
